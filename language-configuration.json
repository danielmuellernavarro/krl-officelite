{
    "comments": {
        "lineComment": ";"
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*(;FOLD|\\bDEF\\b|\\bDEFFCT\\b|\\bDEFDAT\\b)",
            "end": "^\\s*(;ENDFOLD|\\bEND\\b|\\bENDFCT\\b|\\bENDDAT\\b)"
        }
    },
    "capabilities" : {
        "documentFormattingProvider" : "true"
    }
}